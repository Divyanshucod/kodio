generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String 
  email String @unique
  avatar String?
  plan Plan @default(FREE)
  password String?
  verified Boolean @default(false)
  authProvider Provider
  verificationToken String?
  tokenExpiry DateTime?
  updatedAt DateTime
  lastActive DateTime 
  videos Video[]
}
model Video {
  id String @id @default(uuid())
  status Status 
  videoLink String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  errorMessage String?
  prompt String
  user User @relation(fields: [userId], references: [id])
  userId String
}
enum Plan {
  FREE
  PAID
}

enum Provider {
  Google
  Email
}
enum Status {
  Failed
  Completed
  Pending
  InProcess
}